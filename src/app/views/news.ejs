<% include header %>
    <div class="row">
    <div class="col-md-6 mt-4 text-center">
    <table class="table table-striped table-bordered">
    <tr>
    <th>ID</th>
    <th>Titulo</th>
    <th>Noticias</th>
    <th>Acción</th>
    </tr>
    <% for (var i = 0; i < news.length; i ++) { %>
    <tr>
        <td><%= news[i].id_news %></td>
        <td><%= news[i].title %></td>
        <td><%= news[i].news %></td>
    <!--<td><input type="text" name="name" value="<%= news[i].id_news %>" style="width: 50px;"></td>
    <td><input type="text" name="name" value="<%= news[i].title %>" style="width: 50px;"></td>
    <td><input type="text" name="name" value="<%= news[i].news %>" style="width: 50px;"></td>-->
    <td>
<a href="/news/delete/<%= news[i].id_news %>" class="btn btn-danger">Eliminar</a>
<a href="/news/update/<%= news[i].id_news %>" class="btn btn-info">Editar</a>


    </td>
    </tr>

    <% } %>
    </table>
    </div>
    <div class="col-md-6 mt-4 card">
    <form class="card-body" action="/news/add" method="post">
    <h3 class="card-title">Crear Noticias</h3>
    <div class="form-group">
    <input name="title" type="text" class="form-control"
    placeholder="Nuevo Título">
    </div>
    <div class="form-group">
    <input name="news" type="text" class="form-control"
    placeholder="Nuevo Contenido">
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    </form>
    </div>
    </div>
    <% include footer %>